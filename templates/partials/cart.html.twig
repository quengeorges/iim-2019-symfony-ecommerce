<!-- Header cart noti -->
<div class="header-cart header-dropdown">
    <ul class="header-cart-wrapitem">
        {% if cart is not null %}
            {% for cartProduct in cart.cartProducts %}
                {% set product = cartProduct.product %}
                <li class="header-cart-item">
                    <div class="header-cart-item-img">
                        <img src="{{ product.pictureUrl }}" alt="IMG">
                    </div>

                    <div class="header-cart-item-txt">
                        <a href="#" class="header-cart-item-name">
                            {{ product.name }}
                        </a>

                        <span class="header-cart-item-info">
                    {{ cartProduct.quantity  }} x {{ price_format(product.price) }}
                </span>
                    </div>
                </li>
            {% endfor %}
        {% endif %}
    </ul>

    <div class="header-cart-total">
        {% if cart is not null %}
            Total: {{ cart.total }}â‚¬
        {% endif %}
    </div>

    <div class="header-cart-buttons">
        <div class="header-cart-wrapbtn">
            <!-- Button -->
            <a href="{{ path('payment_bill') }}" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                View Cart
            </a>
        </div>

        <div class="header-cart-wrapbtn">
            <!-- Button -->
            <a href="#" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                Check Out
            </a>
        </div>
    </div>
</div>
